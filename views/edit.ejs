<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.6.2/css/bulma.min.css" />
    <link rel="stylesheet" href="/css/main.css">
    <script defer src="https://use.fontawesome.com/releases/v5.0.4/js/all.js"></script>
    <title>Fwitter - Edit Tweet</title>
  </head>
  <body class="site">

    <%- include('./partials/nav') %>

    <section class="site-content">
      <div class="container">
        <div class="columns the-padder">
          <div class="column is-4 is-offset-one-third">
            <div class="card">
              <div class="card-header">
                <p class="subtitle">Edit Tweet</p>
              </div>
              <p class="subtitle" contenteditable="true" id="tweetBody"><%= tweet.tweetBody %></p>
              <button class="button update is-primary" id=<%= tweet._id %> >Update</button>
              <button class="button information">Hi From Console</button>
            </div>
          </div>
        </div>
      </div>
    </section>
    <script type="text/javascript" src="/assets/update.js"></script>

    <%- include('./partials/footer') %>

  </body>
</html>
